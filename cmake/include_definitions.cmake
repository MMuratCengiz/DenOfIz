    set(CMAKE_OBJCXX_STANDARD 23)
    set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -x objective-c")
    set(CMAKE_CXX_FLAGS "${CMAKE_C_FLAGS} -x objective-c++")
endif()